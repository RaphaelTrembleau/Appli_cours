<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raphaeltrembleau.appli_cours.PageActivity">

    <ImageView
        android:id="@+id/imgLondon"
        android:layout_width="0dp"
        android:layout_height="215dp"
        app:srcCompat="@drawable/london"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_editor_absoluteX="4dp" />

    <ImageView
        android:id="@+id/imgStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/star"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.917"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txvAng"
        android:layout_width="123dp"
        android:layout_height="28dp"
        android:text="Angleterre"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginTop="-3dp"
        app:layout_constraintTop_toBottomOf="@+id/imgStar"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.032" />

    <TextView
        android:id="@+id/txvCap"
        android:layout_width="123dp"
        android:layout_height="28dp"
        android:text="Capitale :"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txvAng"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.032" />

    <TextView
        android:id="@+id/txvCapR"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:text="Londres"
        android:textColor="#e10606"
        android:textSize="15sp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/imgStar"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/txvCap"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/txvLang"
        android:layout_width="123dp"
        android:layout_height="28dp"
        android:text="Capitale :"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txvCap"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.032" />

    <TextView
        android:id="@+id/txvLangR"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:text="Anglais"
        android:textColor="#e10606"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txvCapR"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/txvLang"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/txVDes"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="L' Angleterre (en anglais England) est une nation constitutive du Royaume-Uni. \nElle est bordée par l'Ecosse au nord et le pays de Galles à l'ouest. "
        android:layout_marginLeft="8dp"
        android:textColor="#209403"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txvLang"
        app:layout_constraintVertical_bias="0.089" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="135dp"
        android:layout_height="28dp"
        android:text="Choisir"
        android:layout_marginLeft="8dp"
        android:background="#5d9bd5"
        android:textColor="@android:color/white"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/txVDes"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintLeft_toRightOf="@+id/buttonCancel" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="135dp"
        android:layout_height="28dp"
        android:text="Annuler"
        android:layout_marginLeft="8dp"
        android:background="#ea7d3c"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/txVDes"
        app:layout_constraintHorizontal_bias="0.227" />

</android.support.constraint.ConstraintLayout>
